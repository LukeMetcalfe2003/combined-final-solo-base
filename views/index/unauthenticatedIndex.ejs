 <%- include('partials/header') %>
<link rel="stylesheet" href="/styles.css">
<div class="main-content">
    <h1>Welcome to the Voting App</h1>

    <div class="polls">
        <h1>Active polls:</h1>
        <p>Total Polls: <%= totalPolls %></p> 
        <% polls.forEach((poll) => { %>
            <li class="poll-container" id="<%= poll.id %>">
                <h2><%= poll.question %></h2>
        <% }) %>  
    </div>
</div>
</body>
</html>
